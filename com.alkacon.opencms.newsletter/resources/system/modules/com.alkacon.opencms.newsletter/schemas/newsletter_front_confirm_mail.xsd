<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
	
	<xsd:include schemaLocation="opencms://opencms-xmlcontent.xsd"/>
		
	<xsd:element name="AlkaconNewsletterConfirmMails" type="OpenCmsAlkaconNewsletterConfirmMails"/>
	
	<xsd:complexType name="OpenCmsAlkaconNewsletterConfirmMails">
		<xsd:sequence>
			<xsd:element name="AlkaconNewsletterConfirmMail" type="OpenCmsAlkaconNewsletterConfirmMail" minOccurs="0" maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="OpenCmsAlkaconNewsletterConfirmMail">
		<xsd:sequence>
			<xsd:element name="MailFrom" type="OpenCmsString" />
			<xsd:element name="ConfFile" type="OpenCmsVfsFile" minOccurs="0" />				
			<xsd:element name="MailHead" type="OpenCmsString" />
			<xsd:element name="MailFoot" type="OpenCmsString" />						
		</xsd:sequence>
		<xsd:attribute name="language" type="OpenCmsLocale" use="optional"/>
	</xsd:complexType>

	<xsd:annotation>
		<xsd:appinfo>
			<resourcebundle name="com.alkacon.opencms.newsletter.workplace"/>
			<layouts>
				<layout element="MailHead" widget="TextareaWidget" configuration="6" />
				<layout element="MailFoot" widget="TextareaWidget" configuration="3" />
			</layouts>
		</xsd:appinfo>
	</xsd:annotation>  
	
</xsd:schema>